<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

<TextView
    android:id="@+id/message_body_text"
    android:text="Hello UCLA Radio"
    android:background="@drawable/message_rectangle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="240dp"
    android:padding="8dp"
    android:textColor="#000000"
    android:layout_marginTop="4dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="8dp" />

<TextView
    android:id="@+id/message_user_text"
    android:text="John Doe"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#ffff00"
    android:textSize="13sp"
    app:layout_constraintTop_toBottomOf="@+id/message_body_text"
    app:layout_constraintStart_toStartOf="@id/message_body_text"
    android:layout_marginTop="4dp" />

<TextView
    android:id="@+id/message_time_text"
    android:text="11:40"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="13sp"
    android:textColor="#cfd8ff"
    app:layout_constraintStart_toEndOf="@+id/message_user_text"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    app:layout_constraintTop_toBottomOf="@+id/message_body_text" />

</android.support.constraint.ConstraintLayout>
