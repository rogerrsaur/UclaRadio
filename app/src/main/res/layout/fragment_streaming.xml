<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.uclaradio.uclaradio.Fragments.StreamingFragment.StreamingFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/show_art_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/show_title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/show_title_text"
        android:text="LIVE: [Show Title Here]"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_art_img"
        app:layout_constraintBottom_toTopOf="@id/stream_btn_img"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/stream_btn_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_title_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_media_play"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/on_air_btn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toEndOf="@id/stream_btn_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/stream_btn_img"
        app:layout_constraintBottom_toBottomOf="@id/stream_btn_img"
        android:scaleType="fitXY"
        android:text="On Air"
        android:background="@android:color/transparent"
        android:drawableBottom="@android:drawable/ic_menu_call"
        tools:ignore="ContentDescription"/>

    <Button
        android:id="@+id/request_call_btn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintEnd_toStartOf="@id/stream_btn_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/stream_btn_img"
        app:layout_constraintBottom_toBottomOf="@id/stream_btn_img"
        android:scaleType="fitXY"
        android:text="Request"
        android:background="@android:color/transparent"
        android:drawableBottom="@android:drawable/ic_menu_call"
        tools:ignore="ContentDescription"/>

</android.support.constraint.ConstraintLayout>
